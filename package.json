{
  "name": "bundle-n-require",
  "version": "1.1.1",
  "description": "Require and bundle Typescript and Javascript files in NodeJS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup src --format cjs,esm --shims --dts",
    "pub": "pnpm build && pnpm publish --no-git-checks --access public",
    "clean": "rimraf dist"
  },
  "keywords": [
    "esbuild",
    "tsup",
    "require",
    "bundle",
    "nodejs"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Segun Adebayo <joseshegs@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.25.1",
    "node-eval": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
